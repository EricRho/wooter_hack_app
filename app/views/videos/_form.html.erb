<div class="container">

  <%= form_for @video do |f| %>


    <div class="form-group">
      <%= f.label :link %>
      <%= f.text_field :link, class: 'form-control', required: true %>
      <span class="help-block">A link to the video on YouTube.</span>
    </div>

    <div class='form-group'>
      <%= f.label :sport %>
      <%= f.text_field :sport, class: 'form-control', required: true %>
    </div>

    <div class='form-group'>
      <%= f.label :subcategory %>
      <%= f.text_field :subcategory, class: 'form-control', required: 'true' %>
    </div>


    <%= f.submit class: 'btn btn-default' %>
  <% end %>
</div>